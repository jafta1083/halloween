{
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.diagnosticSeverityOverrides": {
        
    }
    ,
    // Point the editor/Language Server to the project's virtualenv which
    // contains the installed dependencies (Flask, Streamlit, python-vlc).
    // Try `.venv` first (some workflows use `.venv`), fallback to `venv`.
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    // Ensure the src/ folder is on the analysis path so project imports
    // (like `from src import ...`) and local packages are resolved. Also
    // include the site-packages paths as a fallback for the language server
    // if it doesn't pick the interpreter automatically.
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/venv/lib/python3.13/site-packages",
        "${workspaceFolder}/.venv/lib/python3.13/site-packages"
    ],
    "DockerRun.DisableDockerrc": true
}